<div class="container">
<%= link_to edit_path(@task.id) do %>
  <div class="bouton1"><div class="btn"><i class="fa fa-pencil"></i>Edit this task</div></div>
<% end %>

<h1><%= @task.title %></h1>
<div class="todo">
<p class="well"><%= @task.details %></p>
<div class="taskok">
<% if @task.completed %>
  <i class="fa-regular fa-circle-check"></i> This task is completed
<% else %>
  <i class="fa-regular fa-circle"></i> This task is not completed yet
<% end %>
</div>
</div>
<hr>
<%= link_to tasks_path do %>
   <div class="bouton"><i class="fa fa-history"></i> <div class="btn">Back to list</div></div>
<% end %>
</div>
